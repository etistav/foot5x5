{% extends "foot5x5MainBundle::layout.html.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block homecontent %}
<div id="landing">
	<div class="landing-content">
		<h2>{{ block('title') }}</h2>
        {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
            {{ flashMessage }}
        </div>
        {% endfor %}
        {% if not userForm.vars.valid %}
        <div class="alert alert-danger col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3"><ul>
            {% for child in userForm.children %}
                {% for error in child.vars.errors %}
                    <li>{{ error.message }}</li>
