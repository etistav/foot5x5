            </div>
            <div class="form-group">
                <div class="col-sm-offset-5 col-sm-3">
                    <input type="submit" class="btn btn-primary" value="S'inscrire" />
                </div>
            </div>
        {{ form_end(userForm) }}
        </div>
	</div>
</div>
