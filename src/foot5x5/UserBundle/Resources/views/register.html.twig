            {% endfor %}
            {% if form_errors(userForm.password.first) %}
                <li>Les mots de passe saisis ne sont pas identiques.</li>
            {% endif %}
        </ul></div>
        {% endif %}
        <div class="well-transparent-blue col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
            {{ form_start(userForm, { 'attr': {'class': 'form-horizontal'} }) }}
            <div class="form-group">
                {{ form_label(userForm.username, null, { 'label_attr':  {
                    'class': 'col-sm-4 control-label'
                }}) }}
